%h1
	= t('login.header')
= form_tag(login_path, method: :post) do |f|
	%div.form-group
		%label{:for => 'email'} 
			= t('email.short')
		%input{:type => 'email', :name => 'email', :class => 'form-control', :placeholder => t('email.long')}
	%div.form-group
		%label{:for => 'password'}
			= t('password')
		%input{:type => 'password', :name => 'password', :class => 'form-control', :placeholder => t('password')}
	%button{:type => 'submit', :class => 'btn btn-default'}
		= t('login.submit')
	= link_to t('menu.registration'), registration_path